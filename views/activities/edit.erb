<form method="post" action="/activities/<%= @activity.id %>">

  <form method="post" action="/activities/<%= @activity.id %>">
    <label for="class-name-field">Class Name:</label>
    <input
    type="text"
    name="class_name"
    id="class-name-field"
    value="<%= @activity.class_name %>"
    />

    <label for="day-field">Day:</label>
    <input
    type="text"
    name="day"
    id="day-field"
    value="<%= @activity.day %>"
    />

    <label for="class-time-field">Class Time:</label>
    <input
    type="text"
    name="class_time"
    id="class-time-field"
    value="<%= @activity.class_time %>"
    />

    <input type='submit' value="Edit Class">
  </form>
