<h1 id="registration-h1">Registrations</h1>
<div class="registration" style= "position:absolute; left:50px ">
  <a href="/registrations/new">New registration</a>
</div>

<ul class="registrations">
  <% for registration in @registrations %>
  <li>
    <p><%= registration.member.first_name %> <%= registration.member.last_name %>
      <%= registration.activity.class_name %> <%= registration.activity.day %>
      <%= registration.activity.class_time %></p>
      <p>
        <form action="/registrations/<%= registration.id %>/delete" method="POST">
          <input type="submit" value="delete" />
        </form>
      </p>
    </li>
    <% end %>
  </ul>
